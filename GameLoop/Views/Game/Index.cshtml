@model IEnumerable<GameLoop.Models.Game>

@{
    ViewData["Title"] = "Games";
}

<h1>Games List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Image</th>
            <th>Actions</th> <!-- Add this column -->
        </tr>
    </thead>
    <tbody>
        @foreach (var game in Model)
        {
            <tr>
                <td>@game.Name</td>
                <td>@game.Description</td>
                <td>@game.Price.ToString("C")</td>
                <td><img src="@game.ImageUrl" alt="@game.Name" width="100" /></td>
                <td>
                    <a asp-action="Edit" asp-route-id="@game.Id" class="btn btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@game.Id" method="post" style="display:inline;">
                        <input type="hidden" name="id" value="@game.Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
